{
    "compilerOptions": {
        "lib": ["es2016","dom"],
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*"
    ]
}